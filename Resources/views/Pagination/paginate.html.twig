{% set page = oka_pagination[managerName].page %}
{% set pageNumber = oka_pagination[managerName].pageNumber %}
{% set itemPerPage = oka_pagination[managerName].itemPerPage %}

{% if pageNumber > 1 %}
<ul class="pagination" data-page-number="{{ pageNumber }}">
	{# Preview Button #}
	{% if page > 1 %}
		{% set previewParams = params|merge({'page': (page - 1)}) %}
		<li class="arrow"><a href="{{ path(route, previewParams) }}">&laquo;</a></li>
	{% endif %}
	
	{# Middle #}
	{% for i in 1..pageNumber %}
		{% set params = params|merge({'page': i}) %}
		{% if page == i %}
			<li><a href="#" class="current">{{ i }}</a></li>
		{% else %}
			<li><a href="{{ path(route, params) }}" data-page="{{ i }}">{{ i }}</a></li>
		{% endif %}
	{% endfor %}
	
	{# Next Button #}
	{% if page < pageNumber %}
		{% set nextParams = params|merge({'page': (page + 1)}) %}
		<li class="arrow"><a href="{{ path(route, nextParams) }}">&raquo;</a></li>
	{% endif %}
</ul>
{% endif %}